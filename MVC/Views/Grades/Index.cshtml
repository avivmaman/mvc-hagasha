@model IEnumerable<MVC.Controllers.newGrades>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            Course
        </th>
        <th>
            Student Name
        </th>
        <th>
            Exam A
        </th>
        <th>
            Exam B
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.courseID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.studentID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.aGrade)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.bGrade)
        </td>
        <td>
            <a href="/Grades/Edit?id=@item.Id&cid=@ViewBag.cid">Edit</a>
        </td>
    </tr>
}

</table>
