@model MVC.Models.Grades

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Grades</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.courseID)
    @Html.HiddenFor(model => model.studentID)
    <div class="form-group">
        <label class="control-label col-md-2">Course</label>
        <div class="col-md-10">
            <select class="form-control" id="courseID" disabled>
                @foreach (MVC.Models.Course a in ViewBag.courses)
                {
                    <option value="@a.Id" @if (ViewBag.selected.courseID == a.Id) { @: selected
                            }>
                        @a.name
                    </option>
                }

            </select>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Student</label>
        <div class="col-md-10">
            <select class="form-control" id="courseID" disabled>
                @foreach (MVC.Models.User a in ViewBag.students)
                {
                    <option value="@a.StudentID" @if (ViewBag.selected.studentID == a.StudentID) { @: selected
                            }>
                        @a.FullName
                    </option>
                }

            </select>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.aGrade, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.aGrade, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.aGrade, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.bGrade, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.bGrade, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.bGrade, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}
<div>
    <a href="@ViewBag.link">Go Back</a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
