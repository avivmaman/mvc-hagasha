@model MVC.Models.scLink

@{
    ViewBag.Title = "Remove Student";
}

<h2>Remove Student</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Remove Student</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.courseID)

        <div class="form-group">
            <label class="control-label col-md-2">Student</label>
            <div class="col-md-10">
                <select class="form-control" id="studentID" name="studentID">
                    @foreach (MVC.Models.User a in ViewBag.students)
                    {
                        <option value="@a.StudentID">
                            @a.FullName
                        </option>
                    }

                </select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    <a href="/Courses">Go Back</a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
